<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coronaviruscheckerbg"
    tools:context=".questions.Covid_19_Q6">

    <androidx.cardview.widget.CardView
        android:layout_width="373dp"
        android:layout_height="657dp"
        android:layout_marginBottom="76dp"
        app:cardBackgroundColor="#F2D3D3D2"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="359dp">

            <TextView
                android:id="@+id/heading"
                style="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/candal"
                android:padding="10dp"
                android:text="Why are you asking for a test?"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <Button
                android:id="@+id/true_Yes_1"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/heading"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_check_box"
                android:fontFamily="@font/amaranth_bold"
                android:text="I've been told to get another coronavirus test"
                android:textColor="@color/purple_700"
                android:gravity="center"
                android:textSize="13dp" />

            <Button
                android:id="@+id/true_Yes_2"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/true_Yes_1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_check_box"
                android:fontFamily="@font/amaranth_bold"
                android:text="I'm ordering for someone I live with who has coronavirus symptoms"
                android:textColor="@color/purple_700"
                android:gravity="center"
                android:textSize="13dp" />

            <Button
                android:id="@+id/No_2"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/true_Yes_2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_check_box_red"
                android:fontFamily="@font/amaranth_bold"
                android:text="None of the above"
                android:textColor="@color/purple_700"
                android:gravity="center"
                android:textSize="13dp" />


        </RelativeLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/preview_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="500dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:backgroundTint="@color/white" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>