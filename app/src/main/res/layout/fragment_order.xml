<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.OrderFragment"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/kodu"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thanks for your order."
        android:layout_gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp"/>

    <Button
        android:id="@+id/continueShoppingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:text="Continue Shopping"
        android:layout_gravity="center"
        android:textColor="#018761"
        />
    <Button
        android:id="@+id/Gotohomepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:text="Go to Home Page"
        android:layout_gravity="center"
        android:textColor="#018761"
        />


    <ImageView
        android:id="@+id/Handshake"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/handshake" />

</LinearLayout>